<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_2PMO2.Views.PageTwo">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Usuario con información:" HorizontalOptions="Center" FontSize="25" FontAttributes="Bold" Margin="10"/>

            <Label Text="Nombre:" FontSize="25" FontAttributes="Bold" />
            <Label Text="{Binding nombre}" x:Name="lbnombre" FontSize="25"/>

            <Label Text="Apellidos:" FontSize="25" FontAttributes="Bold"/>
            <Label Text="{Binding apellidos}" x:Name="lbapellidos" FontSize="25"/>

            <Label Text="Edad:" FontSize="25" FontAttributes="Bold"/>
            <Label Text="{Binding edad}" x:Name="lbedad" FontSize="25"/>

            <Label Text="Correo:" FontSize="25" FontAttributes="Bold"/>
            <Label Text="{Binding correo}" x:Name="lbcorreo" FontSize="25"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>